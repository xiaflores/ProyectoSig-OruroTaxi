<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activities.conductor.MapConductorBookingActivity">
    <Button
        android:id="@+id/btnStarBooking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Inicar Viaje"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="@color/colorWhite"
        android:layout_margin="30dp"/>
    <Button
        android:id="@+id/btnFinishBooking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Finalizar viaje Viaje"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/colorBlueLight"
        android:textColor="@color/colorWhite"
        android:layout_margin="30dp"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <fragment
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:name="com.google.android.gms.maps.SupportMapFragment"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imageViewClientBooking"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/icon_user"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txtViewOriginClientBooking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lugar de recodogida"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_margin="10dp"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/txtViewDestinationClientBooking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:text="lugar de destino"
                        android:layout_margin="10dp"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/txtViewClientBooking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:text="Nombre usuario"
                        android:layout_margin="10dp"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/txtViewEmailClientBooking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:text="Email usuario"
                        android:layout_margin="10dp"
                        android:textSize="16sp"/>
                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>